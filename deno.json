{
    "compilerOptions": {
        "lib": [
            "esnext",
            "deno.ns",
            "deno.unstable",
            "dom",
            "dom.iterable",
            "dom.asynciterable"
        ]
    },
    "fmt": {
        "files": {
            "exclude": [
                "examples",
                "tests",
                "docs/dist",
                ".vscode/",
                ".deno_dir"
            ]
        },
        "options": {
            "useTabs": false,
            "lineWidth": 80,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    },
    "lint": {
        "files": {
            "exclude": [
                "examples",
                "docs/dist",
                "tests",
                ".vscode",
                ".deno_dir"
            ]
        }
    }
}
